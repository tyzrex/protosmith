const grpcInterceptor = interceptorRegistry.getInterceptor('grpc');

{{#each schema.methods}}
export const {{name}} = (
  request: {{input}},
  retries: number = 1
): Promise<{{output}}> =>
  grpcInterceptor.intercept<{{../schema.name}}Client>({
    client: serviceClients.{{../module}}ServiceClient,
    method: (c) => c.{{originalName}}.bind(c),
    args: request,
    retries
  });

{{/each}}
